        faces
        (
            (1 0 4 5)
        );
    }

    top2_half0
    {
        type    empty;
        neighbourPatch    top2_half1;
        faces
        (
            (2 1 5 6)
        );
    }

    top3_half0
    {
        type    empty;
        neighbourPatch    top3_half1;
        faces
        (
            (3 2 6 7)
        );
    }

    top1_half1
    {
        type    empty;
        neighbourPatch    top1_half0;
        faces
        (
            (8 9 13 12)
        );
    }

    top2_half1
    {
        type    empty;
        neighbourPatch    top2_half0;
        faces
        (
            (9 10 14 13)
        );
    }

    top3_half1
    {
        type    empty;
