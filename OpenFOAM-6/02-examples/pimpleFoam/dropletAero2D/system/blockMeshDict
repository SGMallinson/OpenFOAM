#include "parameters"

// number of nodes on each section
// numerical values as #calc not working
nx1 203;//#calc "static_cast<int>(floor(abs($x1 - $x0) / $dx))";
nx2 13;//#calc "static_cast<int>(floor(abs($x2 - $x1) / $dx))";
nx3 203;//#calc "static_cast<int>(floor(abs($x3 - $x2) / $dx))";
ny1 20;//#calc "static_cast<int>(floor(abs($y1 - $y0) / $dy))";
nz  1;//#calc "static_cast<int>(floor(abs($z1 - $z0) / $dz))";

convertToMeters 1.0e-3;

vertices
(
    ($x0 $y0 $z0)
    ($x1 $y0 $z0)
    ($x2 $y0 $z0)
    ($x3 $y0 $z0)

    ($x0 $y1 $z0)
    ($x1 $y1 $z0)
    ($x2 $y1 $z0)
    ($x3 $y1 $z0)

    ($x0 $y0 $z1)
    ($x1 $y0 $z1)
    ($x2 $y0 $z1)
    ($x3 $y0 $z1)

    ($x0 $y1 $z1)
    ($x1 $y1 $z1)
    ($x2 $y1 $z1)
    ($x3 $y1 $z1)
);

blocks
(
    hex (0 1 5 4 8 9 13 12) ($nx1 $ny1 $nz) simpleGrading (1 1 1)
    hex (1 2 6 5 9 10 14 13) injectionZone ($nx2 $ny1 $nz) simpleGrading (1 1 1)
    hex (2 3 7 6 10 11 15 14) ($nx3 $ny1 $nz) simpleGrading (1 1 1)
);

edges
